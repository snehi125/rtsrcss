    /* Custom CSS for header and footer */

    /* Header styles */
    header {
      background-color: #343a40; /* Dark background color */
      color: white;
      padding: 10px 0;
    }

    header h1 {
      margin: 0;
      font-size: 2rem;
    }

    .navbar-nav {
      margin-left: auto;
    }

    .navbar-nav .nav-link {
      color: white;
    }

    .navbar-nav .nav-link:hover {
      color: #f8f9fa; /* Lighter text color on hover */
    }

    .navbar-toggler {
      color: white;
      border-color: white;
    }

    /* Main content padding */
    main {
      padding: 20px 0;
    }

    /* Footer styles */
    footer {
      background-color: #f8f9fa; /* Light background color */
      color: #6c757d; /* Text color */
    }

    footer a {
      color: #6c757d;
      text-decoration: none;
    }

    footer a:hover {
      color: #343a40; /* Darker text color on hover */
    }

    footer .list-unstyled {
      margin: 0;
      padding: 0;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      header h1 {
        font-size: 1.5rem;
      }
    }
  </style>


