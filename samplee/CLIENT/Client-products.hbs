<style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Preferred font stack */
      background-color: #f8f9fa; /* Light gray background */
    }

    .filters-section {
      background-color: #ffffff; /* White background */
      padding: 20px; /* Padding inside filters section */
      margin-bottom: 30px; /* Space below filters */
      border-radius: 10px; /* Rounded corners */
      box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    .filters-section h5 {
      font-size: 1.2rem; /* Filters title font size */
      margin-bottom: 15px; /* Space below title */
      color: #343a40; /* Dark text color */
    }

    .form-check {
      display: inline-block; /* Display checkboxes inline */
      margin-right: 20px; /* Space between checkboxes */
    }

    .form-check-label {
      font-size: 1rem; /* Checkbox label font size */
    }

    .row-cols-1 {
      column-gap: 20px; /* Space between columns */
    }

    .card {
      margin-bottom: 20px; /* Space below each card */
      border: none; /* Remove card borders */
      transition: transform 0.3s ease-in-out; /* Smooth card hover effect */
    }

    .card:hover {
      transform: translateY(-5px); /* Lift card on hover */
    }

    .card img {
      border-top-left-radius: 10px; /* Rounded corners for card image */
      border-top-right-radius: 10px;
      object-fit: cover; /* Maintain aspect ratio of image */
      height: 300px; /* Fixed height for consistent card size */
    }

    .card-body {
      padding: 15px; /* Padding inside card body */
    }

    .card-text {
      font-size: 1rem; /* Text font size */
      color: #212529; /* Dark text color */
    }

    .review-count {
      font-size: 1.2rem; /* Price font size */
      font-weight: bold; /* Bold price */
      color: #007bff; /* Blue price color */
    }

    .ratings {
      margin-top: -10px; /* Adjust rating position */
      color: #ffc107; /* Star color */
    }

    .btn-outline-secondary {
      color: #007bff; /* Blue button text color */
      border-color: #007bff; /* Blue button border color */
      margin-right: 10px; /* Space between buttons */
    }

    .btn-outline-secondary:hover {
      background-color: #007bff; /* Blue button background on hover */
      color: #ffffff; /* White text on hover */
    }
  </style>
<div class="album py-5 bg-light products">
    <div class="container">
        <h5>Filters</h5>
        <div class="mb-3 form-check" style="display:inline-block; margin-right:7.7%">
            <input type="checkbox" checked onchange="men()" class="form-check-input" id="men">
            <label class="form-check-label" for="men">Men's Wear</label>
        </div>
        <div class="mb-3 form-check" style="display:inline-block; margin-right:7.7%">
            <input type="checkbox" checked onchange="women()" class="form-check-input" id="women">
            <label class="form-check-label" for="women">Women's Wear</label>
        </div>
        <div class="mb-3 form-check" style="display:inline-block; margin-right:7.7%">
            <input type="checkbox" checked onchange="kids()" class="form-check-input" id="kids">
            <label class="form-check-label" for="kids">Kid's Wear</label>
        </div>
        <div class="mb-3 form-check" style="display:inline-block; margin-right:7.7%">
            <input type="checkbox" checked onchange="electronics()" class="form-check-input" id="electronics">
            <label class="form-check-label" for="electronics">Electronics</label>
        </div>
        <div class="mb-3 form-check" style="display:inline-block; margin-right:7.7%">
            <input type="checkbox" checked onchange="home()" class="form-check-input" id="home">
            <label class="form-check-label" for="home">Home Appliances</label>
        </div>
        <div class="mb-3 form-check" style="display:inline-block;">
            <input type="checkbox" checked onchange="life()" class="form-check-input" id="lifestyle">
            <label class="form-check-label" for="lifestyle">Lifestyle Products</label>
        </div>
        <hr style="height: 5px;">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {{#each data}}
            <div class="col {{this.category}}">
                <div class="card shadow-sm">
                    <img src="{{this.image}}" alt="product" width="400" height="400">

                    <div class="card-body">
                        <p class="card-text">{{this.name}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            
                            <h5 class="review-count">â‚¹ {{this.price}}</h5>
                            <div class="ratings" id="{{this._id}}" style="margin-top: -15px;">
                                <script>
                                    for(var i = 0; i < Number("{{this.rating}}"); i++) {
                                        document.getElementById("{{this._id}}").innerHTML += ` <i class="fa fa-star rating-color"> `;
                                    }
                                </script>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="">
                                <a href="/products/view/{{this._id}}"><button type="button" class="btn btn-sm btn-outline-secondary"><b>View More</b></button></a>
                                <a href="/products/addtocart/{{this._id}}"><button type="button" class="btn btn-sm btn-outline-secondary"><b>Add To
                                        Cart</b></button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

<script>
    var men = function() {
        $(".men").toggle();
    }
    var women = function() {
        $(".women").toggle();
    }
    var kids = function() {
        $(".kids").toggle();
    }
    var electronics = function() {
        $(".electronics").toggle();
    }
    var home = function() {
        $(".home").toggle();
    }
    var life = function() {
        $(".lifestyle").toggle();
    }
</script>